{% extends 'base-back.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Cr√©ation d'un nouveau Type de Groupe</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="form-group">
                                {{ form_label(form.nomtype, 'Nom du Type de Groupe :', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nomtype, {'attr': {'class': 'form-control'}}) }}
                                <div style="color:red;">
                               {{ form_errors(form.nomtype) }}</div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
