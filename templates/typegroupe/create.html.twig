{% extends 'base-back.html.twig' %}
{% block body %}
{% block title %}{% endblock %}
{{ form_start(form) }}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Horizontal Form</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_row(form.nomtype) }}
                        </div>
                        
                    </div>
                    <div class="form-group">
                        {{ form_row(form.save) }} {# Utilisez 'save' au lieu de 'submit' #}
                        {{ form_end(form) }}
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
