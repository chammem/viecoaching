{% extends 'base-back.html.twig' %}
{%block title %} MODIFIER SEANCE  {% endblock %}
{% block body %}

<h2>Modifier une séance</h2>

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<table>
    <tr>
        <td>{{ form_label(form.titre, "Titre") }}</td>
        <td>{{ form_widget(form.titre) }}</td>
        <td>{{ form_errors(form.titre) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.duree, "Durée") }}</td>
        <td>{{ form_widget(form.duree) }}</td>
        <td>{{ form_errors(form.duree) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.lien, "Lien") }}</td>
        <td>{{ form_widget(form.lien) }}</td>
        <td>{{ form_errors(form.lien) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.mot_de_passe, "Mot de passe") }}</td>
        <td>{{ form_widget(form.mot_de_passe) }}</td>
        <td>{{ form_errors(form.mot_de_passe) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.typeSeance, "Type de séance") }}</td>
        <td>{{ form_widget(form.typeSeance) }}</td>
        <td>{{ form_errors(form.typeSeance) }}</td>
    </tr>
</table>

{{ form_widget(form.save) }}
{{ form_end(form) }}
{% endblock %}