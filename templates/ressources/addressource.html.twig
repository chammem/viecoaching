{% extends 'base-back.html.twig' %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Cr√©ation d'un nouveau groupe</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="form-group row">
                        <label for="TitreR" class="col-md-4 col-form-label text-md-right">Nom :</label>
                        <div class="col-md-6">
                            {{ form_widget(form.TitreR, {'attr': {'class': 'form-control'}}) }}
                            <div style="color:red;">{{ form_errors(form.TitreR) }}</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-md-4 col-form-label text-md-right">Description :</label>
                        <div class="col-md-6">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            <div style="color:red;">{{ form_errors(form.description) }}</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="TypeR" class="col-md-4 col-form-label text-md-right">Type de groupe :</label>
                        <div class="col-md-6">
                            {{ form_widget(form.TypeR, {'attr': {'class': 'form-control'}}) }}
                            <div style="color:red;">{{ form_errors(form.TypeR) }}</div>
                        </div>
                    </div>
                   
                    <div class="form-group row">
                        <label for="url" class="col-md-4 col-form-label text-md-right">Image:</label>
                        <div class="col-md-6">
                            {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
                            <div style="color:red;">{{ form_errors(form.url) }}</div>
                        </div>
                    </div>
                     
                    <div class="form-group row mb-0">
                        <div class="col-md-6 offset-md-4">
                            {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}