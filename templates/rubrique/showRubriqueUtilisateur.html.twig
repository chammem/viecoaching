{% extends 'base-front.html.twig' %}

{% block body %}

<style>
.custom-bg-color {
    background-color: #FFB6C1; /* Replace #your-color with your desired color code */
}

#rubriqueCarousel .big_img {
    height: 300px; /* Set the desired height for your images */
    width: 100%; /* Ensure images take up 100% of the width */
    object-fit: cover; /* Maintain aspect ratio while covering the entire container */
}

.plus-circle {
    display: inline-block;
    width: 30px;
    height: 30px;
    background-color: #4CAF50; /* Green color, change as needed */
    border-radius: 50%;
    text-align: center;
    line-height: 30px;
    color: #fff;
    font-size: 20px;
    margin-top: 10px; /* Adjust as needed */
    cursor: pointer;
}
</style>

<section class="rubrique spad custom-bg-color">
    <div class="container">
        <div id="rubriqueCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% for i in rubrique %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <div class="row">
                            <div class="col-lg-6 mb-4">
                                <div class="product__details__img">
                                    <div class="product__details__big__img">
                                        <img class="big_img" src="{{ asset('images/' ~ i.image) }}" alt="{{ i.titre }}">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-4">
                                <div class="product__details__text">
                                    <h4><a href="{{ path('show_commentaire_utilisateur', {'id': i.id}) }}">{{ i.titre }}</a></h4>

                                    <p>{{ i.contenu }}</p>
                                    <ul>
                                        <li><strong>Date de Cr√©ation:</strong> {{ i.dateCreation|date('Y-m-d H:i:s') }}</li>
                                        <li><strong>Etat:</strong> {{ i.etat }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#rubriqueCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#rubriqueCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="product__details__option">
        <!-- Ajoutez ici d'autres options ou actions -->
        <div class="plus-circle" onclick="window.location.href='{{ path('add_rubrique_utilisateur') }}'">+</div>
    </div>
</section>

{% endblock %}
