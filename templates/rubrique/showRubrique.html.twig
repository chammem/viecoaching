{% extends 'base-back.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VieCoaching</title>
    <style>
        <h1>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }</h1>

        .dancing-script {
            font-family: 'Dancing Script', cursive;
            font-optical-sizing: auto;
            font-weight: 400; 
            font-style: normal;
            color: #333;
            font-size: 24px;
            font-weight: bold;
            text-decoration: underline;
            margin-top: 100px; 
        }

        table {
            margin: auto;
            border-collapse: collapse;
            margin-top: 10px; 
        }

        table, th, td {
            border: 1px solid #333;
        }

        th, td {
            text-align: center;
            padding: 10px;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
 <h1 class="dancing-script">Bienvenue Ã  La Rubrique</h1>
    
    <table>
        <tr>
            <th>id</th>
            <th>titre</th>
            <th>contenu</th>
            <th>dateCreation</th>
            <th>datePublication</th>
            <th>auteur</th>
            <th>datePublication</th>
            <th>rubrique</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        {% for i in rubrique %}
            <tr>
                <td>{{ i.id }}</td>
                <td>{{ i.titre }}</td>
                <td>{{ i.contenu }}</td>
                <td>{{ i.dateCreation | date() }}</td>
                <td>{{ i.datePublication | date() }}</td>
                <td>{{ i.etat }}</td>
                <td>{{ i.auteur }}</td>
                <td>{{ i.rubrique }}</td>
                <td><a href="{{ path('editCommentaire', {'id': i.id}) }}">edit</a></td>
                <td><a href="{{ path('deleteCommentaire', {'id': i.id}) }}">delete</a></td>
            </tr>
        {% endfor %}

    </table>

</body>
</html>

</body>
</html>
{% endblock %}
