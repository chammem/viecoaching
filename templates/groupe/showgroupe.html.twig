{% extends 'base-back.html.twig' %}
{% block body %}
<head>

    <style>
        .button {
            background-color: #4CAF50; /* couleur de fond */
            border: none; /* suppression de la bordure */
            color: white; /* couleur du texte */
            padding: 15px 32px; /* espace de remplissage */
            text-align: center; /* alignement du texte */
            text-decoration: none; /* suppression de la décoration du texte */
            display: inline-block; /* affichage en ligne */
            font-size: 16px; /* taille de la police */
            margin: 4px 2px; /* marge extérieure */
            cursor: pointer; /* curseur de souris */
            border-radius: 10px; /* arrondi des coins */
        }
    </style>
</head>
<body>

<button class="button" onclick="window.location.href='creategroupe'">
    {% block title %}Ajout Groupe{% endblock %}
</button>
 
           
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Liste des Groupes</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>

                                        <th>Identifiant</th>

                                        <th>Nom de Groupe</th>
                                        <th>Description</th>
                                        <th>Type De Groupe</th>
                                        <th>Date de Creation</th>

                                        <th>Image</th>

                                        <th>Action</th>
                                        <th>Supprimer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for groupe in groupe %}
                                        <tr>
                                            <td>{{ groupe.id }}</td>

                                            <td>{{ groupe.nom }}</td>
                                            <td>{{ groupe.description }}</td>

                                            <td>
                                                {% if groupe.typegroupe is not null %}
                                                    {{ groupe.typegroupe.nomtype }}
                                                {% else %}
                                                    Type de groupe non défini
                                                {% endif %}
                                            </td>
                                            <td>{{ groupe.datecreation ? groupe.datecreation.format('Y-M-D') : 'Date de création non définie' }}</td>
                                                                                                                                    <td>{{ groupe.image }}</td>

                                            <td>
                                                <a href="{{ path('editgroupep', {'id': groupe.id}) }}" class="btn btn-primary">Modifier</a>
                                            </td>
                                            <td>
                                                <a href="{{ path('deletegroupe', {'id': groupe.id}) }}" class="btn btn-danger">Supprimer</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
