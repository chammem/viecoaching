{% extends 'base-back.html.twig' %}

{% block body %}
    <style>
        body {
            background-image: url('{{ asset('images/image4.jpg') }}');
            background-repeat: no-repeat;
            background-size: cover;
        }
        .card {
            background-color: rgba(255, 255, 255, 0.8); /* Adjust the alpha value (fourth parameter) for transparency */
        }
    </style>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Ajouter un commentaire</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form'}}) }}
                            <div class="form-group row">
                                <label for="contenu" class="col-md-4 col-form-label text-md-right">Contenu :</label>
                                <div class="col-md-6">
                                    {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                           <div class="form-group row">
    <label for="rubrique" class="col-md-4 col-form-label text-md-right">Rubrique :</label>
    <div class="col-md-6">
            {{ form_widget(form.rubrique, {'attr': {'class': 'form-control'}}) }}
  
                            <div class="form-group row mb-0">
                                <div class="col-md-6 offset-md-4">
                                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
