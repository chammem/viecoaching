{% extends 'base-back.html.twig' %}
{% block body %}
{% block title %}{% endblock %}
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Liste des commentaires</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-responsive-sm">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>titre</th>
                        <th>contenu</th>
                        <th>dateCreation</th>
                        <th>datePublication</th>
                        <th>commentaires</th>
                        <th>etat</th>
                        <th>Modififier</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for i in commentaire %}
                    <tr>
                        <td>{{ i.id }}</td>
                        <td>{{ i.contenu }}</td>
                        <td>{{ i.dateCreation | date }}</td>
                        <td>{{ i.rubrique }}</td>
                        <td><span class="badge badge-primary"><a href="{{ path('edit_commentaire', {'id': i.id}) }}">Modifier</a></span></td>
                        <td><span class="badge badge-danger"><a href="{{ path('delete_commentaire', {'id': i.id}) }}">Supprimer</a></span></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}