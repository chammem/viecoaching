{% extends 'base-front.html.twig' %}
{% block body %}
<div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="breadcrumb__text">
                        <h2>Bibliothèque des différent Catégorie</h2>

                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="breadcrumb__links">
                        <a href="./index.html">Accueil</a>
                        <span>bibliothèque des ressources</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
<body>
 
<div class="row">
    {% for categorie in cat %}
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg" data-setbg="{{ asset('uploads/' ~ categorie.image) }}">
                    <div class="product__label">
                        <span>{{ categorie.nomCategorie }}</span>
                    </div>
                </div>
                <div class="product__item__text">
                    <div class="cart_add">
                        <h6><a href="{{ categorie.ressource }}"></a></h6>
                   <a href="{{ path('afficheResP', {'id': categorie.id}) }}">Voir ressources</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

</div>
<div class="pagination-container">
    <div class="bootstrap-badge">
        <a href="javascript:void()" >{{ knp_pagination_render(cat) }}</a>
    </div>
    <div class="pagination justify-content-center mt-4">
        <!-- Autres éléments de pagination vont ici -->
    </div>
</div>
{% endblock %}

