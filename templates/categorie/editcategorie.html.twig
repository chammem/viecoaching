{% extends 'base-back.html.twig' %}

{% block body %}
    {{ form_start(form, {attr: {'novalidate': 'novalidate', 'class': 'form'}}) }}
<style>
/* Ajoutez ce CSS à votre fichier de styles */

.error-message {
    color: red;
}

.form-control {
    width: 100%;
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

</style>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Modifier catégorie</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <label for="nomCategorie" class="col-md-4 col-form-label text-md-right">Nom de la catégorie :</label>
                            <div class="col-md-6">
                                {{ form_widget(form.nomCategorie, {'attr': {'class': 'form-control'}}) }}
                                <div class="error-message">
                                    {% if form_errors(form.nomCategorie) is not empty %}
                                        <div class="alert alert-danger" role="alert">
                                            {{ form_errors(form.nomCategorie) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="ressource" class="col-md-4 col-form-label text-md-right">Ressource associée :</label>
                            <div class="col-md-6">
                                {{ form_widget(form.ressource, {'attr': {'class': 'form-control'}}) }}
                                <div class="error-message">
                                    {% if form_errors(form.ressource) is not empty %}
                                        <div class="alert alert-danger" role="alert">
                                            {{ form_errors(form.ressource) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="categorie" class="col-md-4 col-form-label text-md-right">Description :</label>
                            <div class="col-md-6">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                <div style="color:red;">
                                    {% if form_errors(form.description) is not empty %}
                                        <div class="alert alert-danger" role="alert">
                                            {{ form_errors(form.description) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="url" class="col-md-4 col-form-label text-md-right">Choisir un fichier :</label>
                            <div class="col-md-6">
                                {% if form_errors(form.image) is not empty %}
                                    <div class="alert alert-danger" role="alert">
                                        {{ form_errors(form.image) }}
                                    </div>
                                {% endif %}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group row mb-0">
                            <div class="col-md-6 offset-md-4">
                                {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
