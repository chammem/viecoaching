{% extends 'base-back.html.twig' %}

{% block body %}

    {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
<style>
/* Ajoutez ce code à votre fichier CSS */

/* Style général du formulaire */
.container {
    margin-top: 50px;
}

.card {
    border: 1px solid #ccc;
    border-radius: 10px;
}

.card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #ccc;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.card-body {
    padding: 20px;
}

/* Style des champs de formulaire */
.form-group {
    margin-bottom: 20px;
}

.form-group label {
    font-weight: bold;
}

/* Style des boutons */
.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

/* Couleur du texte d'erreur */
.alert-danger {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
}

</style>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Création d'une nouvelle catégorie</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form'}}) }}

                        <div class="form-group row">
                            <label for="TitreR" class="col-md-4 col-form-label text-md-right">Nom categorie</label>
                            <div class="col-md-6">
                                {{ form_widget(form.nomCategorie, {'attr': {'class': 'form-control'}}) }}
                                <div style="color:red;">
                                    {% if form_errors(form.nomCategorie) is not empty %}
                                        <div class="alert alert-danger" role="alert">
                                            {{ form_errors(form.nomCategorie) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="categorie" class="col-md-4 col-form-label text-md-right">Ressource :</label>
                            <div class="col-md-6">
                                {{ form_widget(form.ressource, {'attr': {'class': 'form-control'}}) }}
                                <div style="color:red;">
                                    {% if form_errors(form.ressource) is not empty %}
                                        <div class="alert alert-danger" role="alert">
                                            {{ form_errors(form.ressource) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                         <div class="form-group row">
                            <label for="categorie" class="col-md-4 col-form-label text-md-right">Description :</label>
                            <div class="col-md-6">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                <div style="color:red;">
                                    {% if form_errors(form.description) is not empty %}
                                        <div class="alert alert-danger" role="alert">
                                            {{ form_errors(form.description) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="url" class="col-md-4 col-form-label text-md-right">Choisir un fichier :</label>
                            <div class="col-md-6">
                                {% if form_errors(form.image) is not empty %}
                                    <div class="alert alert-danger" role="alert">
                                        {{ form_errors(form.image) }}
                                    </div>
                                {% endif %}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>


                        <div class="form-group row mb-0">
                            <div class="col-md-6 offset-md-4">
                                {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
