{% extends 'base-back.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Ajouter une autre ressource</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form'}}) }}
                            <div class="form-group row">
                                <label for="nom" class="col-md-4 col-form-label text-md-right">Nom :</label>
                                <div class="col-md-6">
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="prenom" class="col-md-4 col-form-label text-md-right">Prénom :</label>
                                <div class="col-md-6">
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="email" class="col-md-4 col-form-label text-md-right">Email :</label>
                                <div class="col-md-6">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="tel" class="col-md-4 col-form-label text-md-right">Téléphone :</label>
                                <div class="col-md-6">
                                    {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
           
                            <div class="form-group row">
                                <label for="ville" class="col-md-4 col-form-label text-md-right">Ville :</label>
                                <div class="col-md-6">
                                    {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="genre" class="col-md-4 col-form-label text-md-right">Genre :</label>
                                <div class="col-md-6">
                                    {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="role" class="col-md-4 col-form-label text-md-right">Rôle :</label>
                                <div class="col-md-6">
                                    {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group row">
    <label for="imageFile" class="col-md-4 col-form-label text-md-right">Télécharger votre photo :</label>
    <div class="col-md-6">
        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>
                            <div class="form-group row mb-0">
                                <div class="col-md-6 offset-md-4">
                                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}