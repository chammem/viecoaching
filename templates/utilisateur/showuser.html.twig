{% extends 'base-back.html.twig' %}
{% block body %}
{% block title %}{% endblock %}
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Liste des utilisateurs</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-responsive-sm">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Email</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Ville</th>
                        <th>Numero telephone</th>
                        <th>Genre</th>
                        <th>Role</th>
                        <th>Modififier</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for u in user %}
                    <tr>
             <td>
    {% if u.image %}
        <img src="{{ vich_uploader_asset(u, 'imageFile') }}" alt="Image de l'utilisateur" class="rounded-circle" style="width: 60px; height: 60px;">
    {% else %}
        <span>Aucune image disponible</span>
    {% endif %}
</td>
                        <td>{{ u.email }}</td>
                        <td>{{ u.nom }}</td>
                        <td>{{ u.prenom }}</td>
                        <td>{{ u.ville }}</td>
                        <td>{{ u.tel }}</td>
                        <td>{{ u.genre }}</td>
                        <td>{% if u.role %}{{ u.role.NomRole }}{% else %}No Role{% endif %}</td>
                        
                      <td><span class="badge badge-primary"><a href="{{ path('editMdp', {'id': u.id}) }}">Modifier</a></span></td>

 <td><span class="badge badge-danger"><a href="{{ path('deleteUtilisateur', {'id': u.id}) }}">Supprimer</a></span></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}