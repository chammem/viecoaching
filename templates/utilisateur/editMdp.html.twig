 {% extends 'base-back.html.twig' %}

{% block body %}
<div class="container-fluid">
        <div class="row  mx-0">
            <div class="col-sm-6 p-md-0">
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="profile">
                    <div class="profile-head">          
                        {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}
                        <div class="photo-content">
            
                            <div class="cover-photo"></div>
                          <div class="profile-photo" style="width: 240px; height: 200px; overflow: hidden; border-radius: 50%;">
                            {% if mot is not null %}
    <img src="{{ vich_uploader_asset(mot, 'imageFile') }}" class="img-fluid rounded-circle" style="width: 100%; height: 100%; object-fit: cover;" alt="Photo de profil">
{% else %}
    <!-- Gérer le cas où mot est null -->
{% endif %}
                        </div>
                       
                        
                    </div>
                    </div>
                    <div class="profile-info">
                        <div class="row justify-content-center">
                            <div class="col-xl-8">
                                <div class="row">
                                    <div class="col-xl-4 col-sm-4 border-right-1 prf-col">
                                        <div class="profile-name">
                                            <h4 class="text-primary">
                                                {{ mot.nom }} {{ mot.prenom }}
                                            </h4>
                                        </div>
                                    </div>
                                    <div class="col-xl-4 col-sm-4 border-right-1 prf-col">
                                        <div class="profile-email">
                                            <h4 class="text-muted">{{ mot.email }}</h4>
                                            <p>Email</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <div class="profile-tab">
                                <div id="profile-settings" class="tab-pane fade show active">
                                    <div class="pt-3">
                                        <div class="settings-form">
                                            <h4 class="text-primary">Account Setting</h4>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    {{ form_row(form.mdp.first, {'attr': {'placeholder': 'Entrez votre mot de passe' , 'class': 'form-control'}}) }}
                                                </div>
                                                <div class="form-group col-md-6">
                                                   {{ form_row(form.mdp.second, {'attr': {'placeholder': 'Confirmer votre mot de passe' , 'class': 'form-control'}}) }}
                                             </div>
                                            </div>
                                            <div class="form-group">
                                            {{ form_row(form.newMdp, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                                        </div>
                                            
                                            <div class="form-group">
                                                {{ form_row(form.Modifier, {'attr': {'class': 'btn btn-primary'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% endblock %}