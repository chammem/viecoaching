{% extends 'base-back.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row  mx-0">
            <div class="col-sm-6 p-md-0">
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="profile">
                    <div class="profile-head">          
                        {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}
                        <div class="photo-content">
            
                            <div class="cover-photo"></div>
                          <div class="profile-photo" style="width: 240px; height: 200px; overflow: hidden; border-radius: 50%;">
                            <img src="{{ vich_uploader_asset(u
                            , 'imageFile') }}" class="img-fluid rounded-circle" style="width: 100%; height: 100%; object-fit: cover;" alt="Photo de profil">
                        </div>
                        <div style="position: absolute; bottom: -30%; right: 80%;">
    <button id="editButton" style=" background-color:transparent;color: black; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer;">
        <i class="fas fa-edit" style="margin-right: 5px;"></i> 
    </button>
</div>
                        
                    </div>
                    </div>
                    <div class="profile-info">
                        <div class="row justify-content-center">
                            <div class="col-xl-8">
                                <div class="row">
                                    <div class="col-xl-4 col-sm-4 border-right-1 prf-col">
                                        <div class="profile-name">
                                            <h4 class="text-primary">
                                                {{ form.vars.value.nom }} {{ form.vars.value.prenom }}
                                            </h4>
                                        </div>
                                    </div>
                                    <div class="col-xl-4 col-sm-4 border-right-1 prf-col">
                                        <div class="profile-email">
                                            <h4 class="text-muted">{{ form.vars.value.email }}</h4>
                                            <p>Email</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <div class="profile-tab">
                                <div id="profile-settings" class="tab-pane fade show active">
                                    <div class="pt-3">
                                        <div class="settings-form">
                                            <h4 class="text-primary">Paramètre du compte</h4>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                                                </div>
                                                <div class="form-group col-md-6">
                                                    {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.tel, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.ville, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.genre, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                            <div class="form-group" id="imageUploadForm" style="display: none;">
    {{ form_label(form.imageFile) }}
    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
</div>
                                            <div class="form-group">
                                                {{ form_row(form.Modifier, {'attr': {'class': 'btn btn-primary'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
 {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

 {% endblock %}
    {% block javascripts %}
    <script>
       document.getElementById('editButton').addEventListener('click', function(event) {
        event.preventDefault(); // Empêche le comportement par défaut du bouton
        document.getElementById('imageUploadForm').style.display = 'block';
    });
    </script>
    {% endblock %}
{% endblock %}
